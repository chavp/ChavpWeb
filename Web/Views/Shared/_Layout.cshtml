<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#">Agile Studio</a>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Home</a></li>
                    @if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <text>
                            <li><a href="#userStories">User Stories</a></li>
                            <li><a href="#buildJobs">Build Jobs</a></li>
                            <li><a href="#deployJobs">Deploy Jobs</a></li>
                            <li><a href="#scheduleJobs">Schedule Jobs</a></li>
                            </text>
                        }
                    }
                    <li><a href="#about">About</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>

                @{
                    var htmlDic = new Dictionary<string, object>();
                    htmlDic.Add("class", "navbar-form navbar-right");
                    if (!Request.IsAuthenticated)
                    {
                        htmlDic.Add("id", "signInForm");
                        using (Html.BeginForm("SignIn", "Account", FormMethod.Post, htmlDic))
                        {
                            <text>
                            <div class="form-group">
                                <input type="text" placeholder="Email" class="form-control" name="Email">
                            </div>
                            <div class="form-group">
                                <input type="password" placeholder="Password" class="form-control" name="Password">
                            </div>
                            @Html.AntiForgeryToken()
                            <a href="javascript:document.getElementById('signInForm').submit()" class="btn btn-success">Sign in</a>
                            </text>
                        }
                    }
                    else
                    {
                        htmlDic.Add("id", "signOutForm");
                        <text>
                            @using (Html.BeginForm("SignOut", "Account", FormMethod.Post, htmlDic))
                            {
                                <a data-toggle="modal" class="btn btn-info" href="#profile">Hello, @User.Identity.Name</a>
                                <span>|</span>
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('signOutForm').submit()" class="btn btn-danger">Sign Out</a>
                            }
                        </text>
                    }
                }
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    <div id="footer">
      <div class="container">
        <h6>© By #:P</h6>
      </div>
    </div>

    @if (Request.IsAuthenticated)
    {
        <text>
    <div class="container">
        <div id="profile" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Your Profile</h4>
                    </div>
                    <div class="modal-body">
                        @User.Identity.Name
                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
        </div>
        </div>
        </text>
    }

    @Scripts.Render("~/bundles/js")

    <script>
        $(function () {
           
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
